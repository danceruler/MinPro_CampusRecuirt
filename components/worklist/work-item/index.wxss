/* components/worklist/work-item/index.wxss */
.item {
  display: flex;
  width: 700rpx;
  height: 200rpx;
  background-color: #fff;
  margin: 0rpx auto;
  margin-top: 30rpx;
  border-radius: 20rpx;
  border: 1rpx #fff solid;
  box-shadow: 0px 0px 10rpx #70707085;
  overflow: hidden;
}

.item-img {
  width: 200rpx;
  height: 200rpx;
}

.item-basic-info {
  display: flex;
  flex-direction: column;
  flex:2;
  justify-content:center;
  margin-left: 10rpx;
}

.item-other-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content:center;
}

.text-icon {
  display: flex;
}

.text-name {
  font-size: 20px;
}

.text-sub {
  font-size: 14px;
  color: #707070;
}

.icon {
  width: 30rpx;
  height: 30rpx;
  color: #707070;
  margin: 0rpx 10rpx;
}