/* components/user/user-info/index.wxss */
.user-info {
  width: 700rpx;
  height: 200rpx;
  margin: 30rpx auto;
  display: flex;
  align-items: center;
  border: 1rpx #fff solid;
  box-shadow: 0px 0px 10rpx #70707085;
}

.user-avater {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
}

.icon {
  width: 30rpx;
  height: 30rpx;
}

.user-detail {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-left: 40rpx;
}

.user-attr {
  display: flex;
  margin-top: 10rpx;
}

.user-name {
  font-size: 20px;
  margin-left: 10rpx;
}

.user-attr-text {
  font-size: 14px;
  margin-left: 20rpx;
  color: #707070;
}

.user-buttons {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  margin-right: 20rpx;
}

.user-button {
  width: 220rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-button::after {
  border: 0; 
}

.button-text {
  margin-left: 10rpx;
  font-size: 30rpx;
  text-align: center;
}