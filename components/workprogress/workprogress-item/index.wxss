/* components/workprogress/workprogress-item/index.wxss */
.item{
  display: flex;
  width: 700rpx;
  height: 200rpx;
  background-color: #fff;
  margin: 0rpx auto;
  margin-top: 30rpx;
  border-radius: 10rpx;
  border: 1rpx #fff solid;
  box-shadow: 0px 0px 10rpx rgba(112,112,112,133);
  overflow: hidden;
  flex-direction: column;
}

.mainview{
  display: flex;
  height: 150rpx;
}

.leftview{
  display: flex;
  flex-direction: column;
  margin-left:20rpx;
  justify-content:center;
  width: 75%;
}

.text-jobname{
  font-size: 35rpx;
}
.text-companyname{
  margin-top: 10rpx;
  font-size: 25rpx;
}
.text-description{
  margin-left:20rpx;
  font-size: 20rpx;
}

.rightview{
  display: flex;
  flex-direction: column;
  /* justify-content:center; */
}

.text-date{
  margin-left: 10rpx;
  margin-top: 20rpx;
}

.view-state-1{
  margin-top: 20rpx;
  width: 100rpx;
  height: 40rpx;
  text-align: center;
  background-color: lightskyblue;
  border-radius: 10rpx;
  font-size: 25rpx;
  color: white;
}

.view-state-0{
  margin-top: 20rpx;
  width: 100rpx;
  height: 40rpx;
  text-align: center;
  background-color: red;
  border-radius: 10rpx;
  font-size: 25rpx;
  color: white;
}
.view-state-2{
  margin-top: 20rpx;
  width: 100rpx;
  height: 40rpx;
