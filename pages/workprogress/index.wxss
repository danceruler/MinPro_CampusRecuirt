page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  position: fixed;
  flex: none;
  display: flex;
  background: #fff;
  width: 100%;
}
.navbar .item{
  flex: auto;
  text-align: center;
  line-height: 70rpx;
  width: 33%;
}
.navbar .item.active{
  color: #66c6f2;
}
.navbar .item.active:default{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: white;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #66c6f2;
}